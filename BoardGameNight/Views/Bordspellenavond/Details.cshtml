@model BoardGameNight.Models.Bordspellenavond

@{
    ViewData["Title"] = "Bordspellenavond Details";
}

@if(TempData["DietWarning"] != null) {

        <div class="alert alert-danger">
                    @TempData["DietWarning"]

        </div>

}
<style>body {
           background-image: url('https://images.squarespace-cdn.com/content/v1/5f4a21f48109a775b6cc05e2/1647265794696-5A3X0CAAX6XBWSU9WKEE/ADXY4868.JPEG');
           background-size: cover;
           background-position: center;
           background-repeat: no-repeat;
           color: white; /* Make all text color white */
       }
       
       .btn-primary {
           background-color: #8fabd1 !important;
           border-color: #8fabd1;
           color: white !important; /* Ensuring the text on buttons is also white */
       }
       
       a, a:visited, a:hover, a:focus, a:active {
           color: black;
       }
       
       h1, p {
           text-shadow: 2px 2px 4px #000000;
       }
       
/* Specific styles for navbar */
.navbar {
    background-color: #333; /* Example background color for the navbar */
    color: black; /* Default text color for the navbar */
}

/* If your navbar text is within elements like <a>, <span>, <p>, etc. */
.navbar a, .navbar a:visited, .navbar a:hover, .navbar a:focus, .navbar a:active {
    color: black; /* Overriding the color for all states of link text */
}

/* If the navbar has specific classes for text, target them as well */
.navbar-text {
    color: black; /* Overriding the color for navbar text elements */
}</style>

@if(TempData["AllergyWarning"] != null) {

    @TempData["AllergyWarning"]
    
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Adres</th>
            <th>Max Aantal Spelers</th>
            <th>Datum Tijd</th>
            <th>Leeftijd Restrictie</th>
            <th>Dieetwensen</th>
            <th>Drank Voorkeur</th>
            <th>Aantal Deelnemers</th>
            <th>Bordspellen</th>
            <!-- Add other properties as needed -->
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Adres</td>
            <td>@Model.MaxAantalSpelers</td>
            <td>@Model.DatumTijd</td>
            <td>@Model.Is18Plus</td>
            <td>@Model.Dieetwensen</td>
            <td>@Model.DrankVoorkeur</td>
            <td>@Model.Deelnemers.Count</td>    
            <td>
                @foreach (var bordspel in Model.Bordspellen)
                {
                    <a asp-controller="Bordspel" asp-action="Details" asp-route-id="@bordspel.Id">@bordspel.Naam</a>
                    <br/>
                }
            </td>
            <td>
                    @foreach (var item in Model.PotluckItems)
                    {
                        <li>@item.Name (Contributor: @item.Participant, Dietary Requirements: @item.Dieetwensen)</li>
                    }
            </td>
            <!-- Add other properties as needed -->
        </tr>
    </tbody>
</table>

<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
<a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
<a asp-action="Index">Back to List</a>