@model BoardGameNight.Models.PotluckItem
@{
    ViewData["Title"] = "Add Potluck Item";
    int bordspellenavondId = (int)ViewBag.BordspellenavondId;
}
<style>body {
           background-image: url('https://images.squarespace-cdn.com/content/v1/5f4a21f48109a775b6cc05e2/1647265794696-5A3X0CAAX6XBWSU9WKEE/ADXY4868.JPEG');
           background-size: cover;
           background-position: center;
           background-repeat: no-repeat;
           color: white; /* Make all text color white */
       }
       
       .btn-primary {
           background-color: #8fabd1 !important;
           border-color: #8fabd1;
           color: white !important; /* Ensuring the text on buttons is also white */
       }
       
       a, a:visited, a:hover, a:focus, a:active {
           color: black;
       }
       
       h1, p {
           text-shadow: 2px 2px 4px #000000;
       }
       
/* Specific styles for navbar */
.navbar {
    background-color: #333; /* Example background color for the navbar */
    color: black; /* Default text color for the navbar */
}

/* If your navbar text is within elements like <a>, <span>, <p>, etc. */
.navbar a, .navbar a:visited, .navbar a:hover, .navbar a:focus, .navbar a:active {
    color: black; /* Overriding the color for all states of link text */
}

/* If the navbar has specific classes for text, target them as well */
.navbar-text {
    color: black; /* Overriding the color for navbar text elements */
}</style>

<h1>Add Potluck Item</h1>

<form asp-action="CreatePotluckItem" asp-route-bordspellenavondId="@bordspellenavondId" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dieetwensen"></label>
        <select asp-for="Dieetwensen" class="form-control">
            @foreach (Dieetwensen dieet in Enum.GetValues(typeof(Dieetwensen)))
            {
                <option value="@((int)dieet)">@dieet</option>
            }
        </select>
        <span asp-validation-for="Dieetwensen" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>

<div class="mt-4">
    <a asp-action="Details" asp-route-id="@bordspellenavondId" class="btn btn-secondary">Back to Bordspellenavond</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}