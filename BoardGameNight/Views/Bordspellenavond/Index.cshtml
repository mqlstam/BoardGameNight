@model IEnumerable<BoardGameNight.Models.Bordspellenavond>

@if (TempData["DeleteError"] != null)
{
    <div class="alert alert-danger">
        @TempData["DeleteError"]
    </div>
}

@if (TempData["EditError"] != null)
{
    <div class="alert alert-danger">
        @TempData["EditError"]
    </div>
}
<style>body {
           background-image: url('https://images.squarespace-cdn.com/content/v1/5f4a21f48109a775b6cc05e2/1647265794696-5A3X0CAAX6XBWSU9WKEE/ADXY4868.JPEG');
           background-size: cover;
           background-position: center;
           background-repeat: no-repeat;
           color: white; /* Make all text color white */
       }
       
       .btn-primary {
           background-color: #8fabd1 !important;
           border-color: #8fabd1;
           color: white !important; /* Ensuring the text on buttons is also white */
       }
       
       a, a:visited, a:hover, a:focus, a:active {
           color: white;
       }
       
       h1, p {
           text-shadow: 2px 2px 4px #000000;
       }
       
/* Specific styles for navbar */
.navbar {
    background-color: #333; /* Example background color for the navbar */
    color: black; /* Default text color for the navbar */
}

/* If your navbar text is within elements like <a>, <span>, <p>, etc. */
.navbar a, .navbar a:visited, .navbar a:hover, .navbar a:focus, .navbar a:active {
    color: black; /* Overriding the color for all states of link text */
}

/* If the navbar has specific classes for text, target them as well */
.navbar-text {
    color: black; /* Overriding the color for navbar text elements */
}</style>

<h1>Bordspellenavonden</h1>


<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Adres</th>
        <th>Max Aantal Spelers</th>
        <th>Datum Tijd</th>
        <th>Is 18+</th>
        <th>Organisator</th>
        <th>Dieetwensen</th>
        <th>DrankVoorkeur</th>
        @if ((int)ViewData["UserAge"] >= 18)
        {
            <th>Actions</th>
        }
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        if ((int)ViewData["UserAge"] < 18 && item.Is18Plus)
        {
            continue;
        }
        <tr>
            <td>@item.Id</td>
            <td>@item.Adres</td>
            <td>@item.MaxAantalSpelers</td>
            <td>@item.DatumTijd</td>
            <td>@(item.Is18Plus ? "Yes" : "No")</td>
            <td>@item.Organisator.UserName</td>
            <td>
                @foreach (Dieetwensen dieetwens in Enum.GetValues(typeof(Dieetwensen)))
                {
                    if (dieetwens != Dieetwensen.Geen || item.Dieetwensen == Dieetwensen.Geen)
                    {
                        if (item.Dieetwensen.HasFlag(dieetwens))
                        {
                            @dieetwens
                            <br/>
                        }
                    }
                }
            </td>
            <td>
            @foreach (DrankVoorkeur drankvoorkeur in Enum.GetValues(typeof(DrankVoorkeur)))
            {
                if (drankvoorkeur != DrankVoorkeur.GeenVoorkeur || item.DrankVoorkeur == DrankVoorkeur.GeenVoorkeur)
                {
                    if (item.DrankVoorkeur.HasFlag(drankvoorkeur))
                    {
                        @drankvoorkeur
                        <br/>
                    }
                }
            }
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                @if ((string)ViewData["UserName"] == item.Organisator.UserName)
                {
                    @if ((int)ViewData["UserAge"] >= 18)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                }
                else
                {
@if (item.Deelnemers.Any(d => d.Id == ViewData["UserId"] as string))
{
    <form asp-action="Unsubscribe" asp-route-id="@item.Id" method="post">
        <button type="submit" class="btn-link">Uitschrijven</button>
    </form>
}
else
{
    <form asp-action="Subscribe" asp-route-id="@item.Id" method="post">
        <button type="submit" class="btn-link">Inschrijven</button>
    </form>
}
                }
            </td>
        </tr>
    }
    </tbody>
</table>

@if ((int)ViewData["UserAge"] >= 18)
{
    <a asp-action="Create">Create New Bordspellenavond</a>
}